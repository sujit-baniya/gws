root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.go]
charset = utf-8
indent_style = tab
indent_size = 4

[*.{json,mod,toml,.md}]
charset = utf-8
indent_style = space
indent_size = 4

[*.{yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2

[Makefile]
charset = utf-8
indent_style = tab
indent_size = 4
